<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.adrsdao.AdrsDao">
	<select id="selectAdrsList" resultSets="AdrsVO">
		SELECT ADRS_NO,MEM_ID,ADRS_NAME,ADRS_TEL,ADRS_ADD 
		FROM ADDRESSBOOK 
	</select>
	
	<select id="selectAdrs" parameterType="string" resultSets="AdrsVO">
		SELECT ADRS_NO,MEM_ID,ADRS_NAME,ADRS_TEL,ADRS_ADD
		FROM ADDRESSBOOK
		WHERE ADRS_NO=#{AdrsNo}
	</select>
	
	<insert id="insertAdrs">
		INSERT INTO 
			ADDRESSBOOK(ADRS_NO,MEM_ID,ADRS_NAME,ADRS_TEL,ADRS_ADD) 
				VALUES(#{adrsNo},#{memId},#{adrsName},#{adrsTel},#{adrsAdd});
	</insert>
	<update id="update">
		
	</update>
</mapper>